<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<Authors>Leader</Authors>
		<Description>SqliteAppSettings</Description>
		<Version>2025.01.20</Version>
	</PropertyGroup>
	<Choose>
		<When Condition=" '$(Configuration)'=='Release' ">
			<PropertyGroup>
				<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
				<PackageOutputPath>..\nupkg</PackageOutputPath>
			</PropertyGroup>
		</When>
	</Choose>

	<ItemGroup>
		<None Remove="UserRole.sql" />
	</ItemGroup>

	<ItemGroup>
		<EmbeddedResource Include="State.sql" />
		<EmbeddedResource Include="Config.sql" />
		<EmbeddedResource Include="UserRole.sql" />
		<EmbeddedResource Include="Users.sql" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Condition=" '$(Configuration)'=='Release' " Include="SQLite" Version="2025.1.20" />
		<ProjectReference Condition=" '$(Configuration)'=='Debug' " Include="..\SQLite\SQLite.csproj" />
		<PackageReference Include="System.Data.SQLite.Core" Version="1.0.119" />
	</ItemGroup>

	<ItemGroup>
		<Content Include="$(OutputPath)\SqliteAppSettings.pdb">
			<Pack>true</Pack>
			<PackagePath>lib\$(TargetFramework)</PackagePath>
		</Content>
	</ItemGroup>

</Project>
